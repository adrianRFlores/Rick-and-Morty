<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CharacterDetailsFragment">

    <ImageView
        android:id="@+id/pfp"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        tools:src="@drawable/ic_baseline_insert_emoticon_24"/>

    <TextView
        android:id="@+id/charName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/pfp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Character"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_title_medium"/>

    <TextView
        android:id="@+id/speciesText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/species"
        app:layout_constraintTop_toBottomOf="@id/charName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_extralarge"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Species:"/>

    <TextView
        android:id="@+id/species"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/speciesText"
        app:layout_constraintTop_toTopOf="@id/speciesText"
        app:layout_constraintBottom_toBottomOf="@id/speciesText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_extralarge"
        android:textAlignment="textEnd"
        tools:text="especie"/>
    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/species"
        app:layout_constraintTop_toBottomOf="@id/speciesText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_extralarge"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Status:"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/statusText"
        app:layout_constraintTop_toTopOf="@id/statusText"
        app:layout_constraintBottom_toBottomOf="@id/statusText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_extralarge"
        android:textAlignment="textEnd"
        tools:text="status"/>
    <TextView
        android:id="@+id/genderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/gender"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_extralarge"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Gender:"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/genderText"
        app:layout_constraintTop_toTopOf="@id/genderText"
        app:layout_constraintBottom_toBottomOf="@id/genderText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_extralarge"
        android:textAlignment="textEnd"
        tools:text="gender"/>

</androidx.constraintlayout.widget.ConstraintLayout>